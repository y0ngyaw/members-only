<h1>Login</h1>

<%= form_for(:session, url: login_path) do |f| %>
	<%= f.label :email %>
	<%= f.email_field :email %>

	<br>

	<%= f.label :password %>
	<%= f.password_field :password %>

	<br>

	<%= f.submit "Login" %>
<% end %>

<% if logged_in? %>
	<%= link_to 'Logout', logout_path, :method => :delete %>
<% end %>
<%= link_to 'New Post', new_post_path %>
<%= link_to 'All Posts', posts_path %>